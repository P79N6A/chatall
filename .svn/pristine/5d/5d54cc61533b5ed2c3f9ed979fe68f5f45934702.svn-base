.recive-can {
    margin-top: 30px;
    .text-can {
        text-align: center;
        p {
            font-size: 15px;
            line-height: 8px;
            color: #444;
        }
        h1 {
            font-size: 51px;
            line-height: 40px;
            color: #231916;
            font-weight: normal;
        }
    }
    .list-can {
        min-height: calc(100vh - 251px);
        overflow-y: scroll;
        margin-top: 16px;
        background: #fff;
        ul {
            padding-bottom: 60px;   
            max-height: calc(100vh - 251px);
            overflow-y: scroll;

            li {
                width: calc(100vw - 20px);
                height: 56px;
                margin: 0 auto;
                display: flex;
                border-bottom: 1px solid #DBDBDB;
                img {
                    width: 36px;
                    height: 36px;
                    margin: 10px;
                }
                .list-right-can {
                    .list-right-top {
                        width: calc(100vw - 87px);
                        display: flex;
                        justify-content: space-between;
                        p {
                            font-size: 15px;
                            line-height: 34px;
                            color: #444;
                        }
                    }
                    span {
                        margin-top: -6px;
                        display: block;
                        font-size: 12px;
                        color: #888;
                    }
                }
            }
        }
    }
}
.list-menu {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10011;
    background: #fff;
    ul {
        li {
            height: 44px;
            text-align: center;
            border-bottom: 1px solid #DBDBDB;
            p {
                font-size: 16px;
                line-height: 38px;
                color: #000000;
            }
        }
    }
}
.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .4);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10000;
}