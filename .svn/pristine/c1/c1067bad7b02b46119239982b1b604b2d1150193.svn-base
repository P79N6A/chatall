.sort-container {
    width: 100%;
    height: calc(100vh);
    overflow-y: scroll;
    margin-top: 45px;
    background: #fff;
    .sort-container-top {
        width: 100%;
        height: 40px;
        input {
            width: calc(100vw - 20px);
            height: 29px;
            margin: 10px;
            padding:0 30px;
            border-radius: 19.5px;
            background: #f2f2f2;
            &::placeholder {
                color: #444;
                text-align: center;
            }
        }
    }
    
    .sort-body-container {
        width: 100%;
        .sort-grey {
            width: 100%;
            height: 20px;
            border-top: 1px solid #E5E5E5;
            border-bottom: 1px solid #E5E5E5;
            background: #f5f5f5;
            p {
                margin-left: 15px;
                font-size: 12px;
                line-height: 20px;
                color: #888;
            }
        }
        ul {
            width: calc(100vw - 20px);
            margin: 0 auto;
            li {
                width: 100%;
                height: 50px;
                display: flex;
                border-bottom: 1px solid #e5e5e5;
                &:last-child {
                    border: none;
                }
                img {
                    width: 30px;
                    height: 30px;
                    margin: 10px;
                }
                p {
                    font-size: 15px;
                    line-height: 47px;
                    color: #444;
                }
            }
        }
    }
}