.send-red {
    height: calc(100vh);
    margin-top: 46px;
    background: #f5f5f5;
    ul {
        padding-top: 10px;
        li {
            margin: 0 10px 25px 10px;
            position: relative;
            .font-left {
                position: absolute;
                top: 13px;
                left: 15px;
                font-size: 15px;
                color: #444;
            }
            .red-btn {
                width: calc(100vw - 40px);
                margin-left: 10px;
                height: 44px;
                text-align: center;
                color: #fff;
                font-size: 16px;
                line-height: 42.4px;
                border-radius: 22px;
                background: #EE0024;
            }
            .font-money {
                margin-top: 12px;
                display: flex;
                justify-content: center;
                p {
                    font-size: 20px;
                    line-height: 41px;
                    color: #000;
                }
                .money-span {
                    font-size: 30px;
                    line-height: 45px;
                    color: #000;
                }
                
            }
            span {
                position: absolute;
                top: 13px;
                right: 15px;
                font-size: 15px;
                color: #000;
            }
            .font-little {
                margin: 11px;
                font-size: 12px;
                color: #888;
            }
            input {
                width: calc(100vw - 20px);
                height: 44px;
                padding-right: 35px;
                background: #fff;
                border-radius: 5px;
                border: none;
                text-align: right;
                font-size: 15px;
                color: #444;
                &:-ms-input-placeholder {
                    font-size: 15px;
                    color: #aaa;
                }
                &:-webkit-input-placeholder {
                    font-size: 15px;
                    color: #aaa;
                }
            }
        }
    }
}

