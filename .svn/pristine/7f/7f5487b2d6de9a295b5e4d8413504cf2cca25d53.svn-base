.forwardMsg {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: absolute;
  z-index: 11;

  .user-container {
    height: 86vh;
    margin-top: 44px;

    .grey-line {
      width: 100%;
      height: 20px;
      background: #f5f5f5;

      p {
        font-size: 12px;
        line-height: 20px;
        margin-left: 8px;
        color: #888;
      }
    }

    .userlist-can {
      width: 100%;
      height: 51px;
      padding-top: 10px;
      padding-left: 10px;
      padding-right: 10px;
      background: #fff;

      .userlist-can-child {
        width: 100%;
        height: 40px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #e5e5e5;

        .userlist-child-left {
          width: 100%;
          display: flex;

          img {
            width: 30px;
            height: 30px;
            margin: 0 5px;
            border-radius: 50%;
          }

          span {
            font-size: 16px;
            line-height: 30px;
            color: #444;
          }
        }

        .userlist-child-right {
          input {
            -webkit-appearance:none;
            display: block;
            width: 25px;
            height: 25px;
            border-radius: 50%;
            border: 1px solid #ABABAB;
            margin-top: 2px;
          }

          input::before {
            display: block;
            content: "\2714";
            text-align: center;
            font-size: 15px;
            color: white;
            line-height: 10px;
          }

          input:checked {
            border: none;
            background: #EE0024;
          }
        }
      }
    }
  }

  .footer {
    width: 100%;
    height: 44px;
    background: #F5F5F5;
    position: fixed;
    bottom: 0;
    font-size: 16px;
    color: #EE0024;
    padding: 0 20px;

    span {
      line-height: 44px;
    }

    span:nth-child(1) {
      float: left;
    }

    span:nth-child(2) {
      float: right;
    }
  }
}
