.redbag-container {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 12;
    background: rgba(0, 0, 0, 0.6);
    .red-bag {
        width: 260px;
        height: 350px;
        position: fixed;
        z-index: 10;
        left:50%;
        top:50%;
        transform:translate(-50%,-50%);
        background: url("../images/lottery-bg/setHongbao.png") 50% 23% no-repeat !important;
        .avatar {
            display: flex;
            justify-content: center;
            img {
                width: 60px;
                height: 60px;
                margin-top: 30px;
                border-radius: 50%;
            }
            p {
                font-size: 13px;
                color: #fff;
            }
            span {
                display: block;
    
                font-size: 16px;
                color: #fff;
            }
            h2 {
                font-weight: normal;
                margin-top: 5px;
                font-size: 14px;
                color: #000;
            }
            h3 {
                color: #fc4c4c;
                font-size: 20px;
                font-weight: normal;
            }
        }
        .user-can {
            max-height: 157px;
            overflow-y: scroll;
            ul {
                li {
                    border-bottom: 1px solid #dbdbdb;
                    overflow: hidden;
                    padding: 5px 7px;
                    .user-imgs {
                        img {
                            border-radius: 50%;
                        height: 35px;
                        width: 35px;
                        overflow: hidden;
                        margin-right: 10px;
                        float: left;
                        }
                    }
                    .list-right {
                        width: 195px;
                        float: left;
                        .list-right-top {
                            .user-name {
                                font-size: 14px;
                                color: #000;
                                float: left;
                            }
                            .user-money {
                                font-size: 14px;
                                color: #000;
                                float: right;
                            }
                        }
                        .user-time {
                            clear: both;
                            text-align: left;
                            color: #a0a0a0;
                        }
                    }
                }
            }
        }
        h1 {
            position: absolute;
            top: 5px;
            right: 10px;
            transform: rotateX(40deg);
            color: #f5f5f5;
            font-weight: normal;
            font-size: 26px;
        }
        .role-1 {
            margin-top: 100px;
        }
        .role-2 {
            margin-top: 20px;
        }
        .role-3 {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            p {
                color: #fc4c4c;
                font-size: 18px;
                font-weight: bold;
            }
        }
    }
}

.linghongbao-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 111;
    background: rgba(0, 0, 0, .4);
    .all-red-bag {
        width: calc(100vw - 50px);
        height: 331px;
        position: fixed;
        top: 25%;
        left: 25px;
        border-radius: 10px;
        background: #fff;
        img {
            width: 100%;
            height: 75px;
        }
        .no-red-bag {
            width: 100%;
            img {
                width: 99px;
                height: 160px;
                margin: 20px auto;
            }
        }
        ul {
            width: 100%;
            height: 250px;
            overflow-y: scroll;
            li {
                width: calc(100vw - 60px);            
                height: 45px;
                margin: 0 auto;
                position: relative;
                display: flex;
                border-bottom: 1px solid #dbdbdb;
                p {
                    margin: 0 10px;
                    font-size: 15px;
                    line-height: 41px;
                    color: #EE0024;
                }
                .click-btn {
                    width: 88px;
                    height: 24px;
                    margin: 10px;
                    margin-left: 20px;
                    position: absolute;
                    right: 0px;
                    top: -2px;
                    border-radius: 12px;
                    text-align: center;
                    background: #EE0024;
                    p {
                        margin: 0 10px;
                        font-size: 15px;
                        line-height: 24px;
                        color: #fff;
                    }
                }
            }
        }
    }
}

.news-tip {
    display: flex; 
    margin-top: 5px; 
    margin-right: 5px; 
    position: relative;
    .tips {
        width: 21px;
        height: 15px;
        position: absolute;
        top: -2px;
        left: 13px;
        text-align: center;
        border-radius: 7.5px;
        background: #fff;
        border: 1px solid #EE0024;
        p {
            font-size: 12px;
            line-height: 13.5px;
            color: #EE0024
        }
    }
}